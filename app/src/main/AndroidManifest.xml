<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joaodamorim.interceptors">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/robo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/robo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".usuario.gui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".usuario.gui.LogInActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".usuario.gui.CadastroActivity" />
        <activity android:name=".usuario.gui.TelaInicialActivity" />
        <activity
            android:name=".usuario.gui.EspecieActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".usuario.gui.CalculandoActivity" />
        <activity android:name=".usuario.gui.RelatorioActivity"></activity>
    </application>

</manifest>